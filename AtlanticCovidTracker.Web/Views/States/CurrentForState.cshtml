@model AtlanticCovidTracker.Web.Features.States.CurrentForStateViewModel
@{
    ViewData["Title"] = $"{Model.StateMetadata.State} Current";
}

<h1>@Utilities.GetStateName(Model.StateMetadata.State) Current</h1>

<div class="mb-3">
    <a class="btn btn-outline-primary" asp-controller="States" asp-action="Current">
        <span class="mr-3">&laquo;</span>Back
    </a>
</div>

<partial name="_StateMetadata" for="StateMetadata" />

<div class="row mt-3">
    <div class="col-8 offset-2">
        <partial name="_StateDataSingle" for="CurrentData" />
    </div>
</div>

@model IEnumerable<UnitedStatesData>
@{
    var firstRow = Model.First();
}

<table class="table table-sm table-striped table-responsive">
    <thead>
        <tr>
            <th><span asp-for="@firstRow.Date" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.Death" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.DeathIncrease" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.HospitalizedCumulative" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.HospitalizedCurrently" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.InIcuCumulative" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.InIcuCurrently" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.Negative" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.NegativeIncrease" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.OnVentilatorCumulative" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.OnVentilatorCurrently" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.Pending" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.Positive" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.PositiveIncrease" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.Recovered" data-toggle="tooltip"></span></th>
            <th><span asp-for="@firstRow.TotalTestResults" data-toggle="tooltip"></span></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usData in Model)
        {
            <tr>
                <td class="text-right">@usData.Date.ToShortDateString()</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.Death)</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.DeathIncrease)</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.HospitalizedCumulative)</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.HospitalizedCurrently)</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.InIcuCumulative)</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.InIcuCurrently)</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.Negative)</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.NegativeIncrease)</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.OnVentilatorCumulative)</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.OnVentilatorCurrently)</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.Pending)</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.Positive)</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.PositiveIncrease)</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.Recovered)</td>
                <td class="text-right">@Utilities.FormatNullableInt(usData.TotalTestResults)</td>
            </tr>
        }
    </tbody>
</table>